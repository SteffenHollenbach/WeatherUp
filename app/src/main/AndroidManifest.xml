<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.steffen.weatherup" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-sdk android:minSdkVersion="16"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/weather_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="Select Source" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SearchByZip_Class" android:label="Enter ZIP"/>
        <activity android:name=".SearchByGPS_Class" android:label="Search GPS"/>
        <activity android:name=".ShowResult_Class"  android:label="Result"/>
    </application>

</manifest>
