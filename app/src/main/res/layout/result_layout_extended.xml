<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:id="@+id/btn_refresh"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change View"
        android:id="@+id/btn_view"
        android:layout_gravity="bottom"
        android:layout_alignTop="@+id/btn_refresh"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ScrollView
        android:layout_width="389dp"
        android:layout_height="501dp"
        android:layout_below="@+id/tv_result"
        android:layout_above="@+id/btn_get"
        android:background="#31ffffff"
        android:layout_weight="2">
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/tv_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_span="5"
            android:layout_column="2">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_city"
                    android:text="Stadt: "
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Unknown"
                    android:id="@+id/tv_city_result"
                    android:layout_column="15" />

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF0000" />

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_temp"
                    android:text="Temperatur: "
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Unknown"
                    android:id="@+id/tv_temp_result"
                    android:layout_column="15" />

            </TableRow>
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_weather_desc"
                    android:text="Wetter: "
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Unknown"
                    android:id="@+id/tv_weather_desc_result"
                    android:layout_column="15" />

            </TableRow>
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_wind_speed"
                    android:text="Windgeschwindigkeit: "
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Unknown"
                    android:id="@+id/tv_wind_speed_result"
                    android:layout_column="15" />

            </TableRow>
            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_humidity"
                    android:text="Luftfeuchte: "
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Unknown"
                    android:id="@+id/tv_humidity_result"
                    android:layout_column="15" />

            </TableRow>
            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_pressure"
                    android:text="Luftdruck: "
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Unknown"
                    android:id="@+id/tv_pressure_result"
                    android:layout_column="15" />

            </TableRow>
            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_visibility"
                    android:text="Sichtbarkeit: "
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Unknown"
                    android:id="@+id/tv_visibility_result"
                    android:layout_column="15" />

            </TableRow>
        </TableLayout>
    </ScrollView>


</RelativeLayout>